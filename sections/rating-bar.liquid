{%- if section.settings.enable_rating_bar -%}
  {%- unless section.settings.home_page_only and template != 'index' -%}
    <section id="section-{{ section.id }}" data-section-id="{{ section.id }}" data-section-type="announcement-bar">
      <div class="AnnouncementBar">
        <div class="AnnouncementBar__Wrapper">
          <p class="AnnouncementBar__Content Heading">
            {{ section.settings.rating_text | escape }}
          </p>
        </div>
      </div>
    </section>

    <style>
      #section-{{ section.id }} {
        background: {{ section.settings.background }};
        color: {{ section.settings.text_color }};
      }
    </style>

    <script>
      document.documentElement.style.setProperty('--announcement-bar-height', document.getElementById('shopify-section-announcement').offsetHeight + 'px');
    </script>
  {%- endunless -%}
{%- endif -%}

{% schema %}
{
  "name": "Rating bar",
  "settings": [
    {
      "type": "checkbox",
      "id": "enable_rating_bar",
      "label": "Enable Rating bar",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "home_page_only",
      "label": "Home page only",
      "default": false
    },
    {
      "type": "color",
      "id": "background",
      "label": "Background",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text",
      "default": "#ffffff"
    },
    {
      "type": "text",
      "id": "rating_text",
      "label": "Rating Text",
      "default": "1,430 Verified Reviews"
    },
    {
      "type": "range",
      "id": "rating",
      "min": 0,
      "max": 5,
      "step": 0.5,
      "label": "Rating",
      "default": 4
    }
  ]
}
{% endschema %}